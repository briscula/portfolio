{
  "version": 2,
  "buildCommand": "cd ../.. && pnpm install && pnpm --filter @repo/database build && cd apps/api && pnpm build",
  "installCommand": "cd ../.. && pnpm install",
  "builds": [
    {
      "src": "dist/main.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "../../packages/database/dist/**",
          "../../packages/database/node_modules/.prisma/**",
          "../../packages/database/package.json",
          "node_modules/@repo/database/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "dist/main.js",
      "methods": ["GET", "POST", "PUT", "PATCH", "DELETE", "OPTIONS", "HEAD"]
    }
  ]
}